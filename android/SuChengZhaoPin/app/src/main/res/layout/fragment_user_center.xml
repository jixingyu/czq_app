<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/user_center_title_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_user_center_with_blur"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/user_head_img"
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:layout_marginTop="@dimen/default_margin"
                    android:src="@drawable/icon_default_head_img"
                    app:border_color="#ffffff"
                    app:border_width="1dp" />

                <TextView
                    android:id="@+id/user_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/user_mail_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/logout_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:padding="@dimen/default_padding"
                    android:text="@string/logout"
                    android:textColor="@color/white"
                    android:visibility="invisible" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />

            <!--我的简历-->
            <RelativeLayout
                android:id="@+id/my_resume_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/abc_list_selector_holo_dark"
                android:clickable="true"
                android:padding="@dimen/default_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/icon_my_resume"
                    android:drawablePadding="16dp"
                    android:gravity="center_vertical"
                    android:text="@string/my_resume" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/icon_arrow_right_black" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />

            <!--申请记录-->
            <RelativeLayout
                android:id="@+id/send_record_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/abc_list_selector_holo_dark"
                android:clickable="true"
                android:padding="@dimen/default_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/icon_send_record"
                    android:drawablePadding="16dp"
                    android:gravity="center_vertical"
                    android:text="@string/send_record" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/icon_arrow_right_black" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />

            <!--面试邀请-->
            <RelativeLayout
                android:id="@+id/invite_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/abc_list_selector_holo_dark"
                android:clickable="true"
                android:padding="@dimen/default_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/icon_invite"
                    android:drawablePadding="16dp"
                    android:gravity="center_vertical"
                    android:text="@string/invite" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/icon_arrow_right_black" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />

            <!--我的收藏-->
            <RelativeLayout
                android:id="@+id/my_collection_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/abc_list_selector_holo_dark"
                android:clickable="true"
                android:padding="@dimen/default_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/icon_my_collection"
                    android:drawablePadding="16dp"
                    android:gravity="center_vertical"
                    android:text="@string/my_collection" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/icon_arrow_right_black" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />

            <!--修改个人信息-->
            <RelativeLayout
                android:id="@+id/edit_personal_details_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/abc_list_selector_holo_dark"
                android:clickable="true"
                android:padding="@dimen/default_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/icon_edit_personal_details"
                    android:drawablePadding="16dp"
                    android:gravity="center_vertical"
                    android:text="@string/edit_personal_details" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/icon_arrow_right_black" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
